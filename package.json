{
  "name": "@codexai/cli",
  "version": "1.0.0",
  "description": "A CLI tool for AI-powered code analysis and automated code review using AI.",
  "main": "dist/index.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "codeai": "./dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/codeai-org/cli.git"
  },
  "keywords": [
    "cli",
    "code-analysis",
    "ai",
    "typescript",
    "developer-tools"
  ],
  "author": "CodeAI Team <support@codeai.com>",
  "license": "MIT",
  "homepage": "https://github.com/codeai-org/cli#readme",
  "bugs": {
    "url": "https://github.com/codeai-org/cli/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "build": "NODE_ENV=production node scripts/build.js",
    "build:dev": "NODE_ENV=development node scripts/build.js --dev",
    "build:production": "node scripts/build.js",
    "dev": "NODE_ENV=development npm run build:dev && node dist/index.js",
    "start": "node dist/index.js",
    "start:watch": "NODE_ENV=development node scripts/build.js --dev --watch",
    "start:dev": "node dist/index.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "check": "npm run type-check && npm run lint",
    "prepublishOnly": "npm run check && npm run build",
    "prepare": "husky || true",
    "commitlint": "commitlint --edit"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.6.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^17.0.1",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.3",
    "open": "^10.1.2",
    "ora": "^8.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/archiver": "^6.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.0.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
